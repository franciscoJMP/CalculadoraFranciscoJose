<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/tx_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/blanco"
        android:ems="10"
        android:enabled="false"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textColor="#151414"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:id="@+id/bt_porcent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="%"
                android:layout_marginRight="2pt"
                android:background="@color/fondoAzul"
                android:onClick="porcentaje"
                ></Button>
            <Button
                android:id="@+id/bt_AC"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="AC"
                android:layout_marginRight="2pt"
                android:background="@color/fondoAzul"
                android:onClick="numero"
                ></Button>


            <ImageButton
                android:id="@+id/bt_borrar"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:src="@drawable/eliminar"
                android:layout_marginRight="2pt"
                android:background="@color/fondoAzul"
                android:onClick="borrarCaracter"
                ></ImageButton>
            <Button
                android:id="@+id/bt_div"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="/"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                android:onClick="operacion"
                ></Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            >
            <Button
                android:id="@+id/bt_siete"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="7"
                android:layout_marginRight="2pt"
                android:background="@color/fondoAzul"
                android:onClick="numero"
                ></Button>
            <Button
                android:id="@+id/bt_ocho"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="8"
                android:layout_marginRight="2pt"
                android:background="@color/fondoAzul"
                android:onClick="numero"
                ></Button>
            <Button
                android:id="@+id/bt_nueve"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="9"
                android:layout_marginRight="2pt"
                android:background="@color/fondoAzul"
                android:onClick="numero"
                ></Button>
            <Button
                android:id="@+id/bt_multi"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="*"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                android:onClick="operacion"
                ></Button>

        </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1pt"
        >
        <Button
            android:id="@+id/bt_cuatro"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="4"
            android:layout_marginRight="2pt"
            android:background="@color/fondoAzul"
            android:onClick="numero"
            ></Button>
        <Button
            android:id="@+id/bt_cinco"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="5"
            android:layout_marginRight="2pt"
            android:background="@color/fondoAzul"
            android:onClick="numero"
            ></Button>
        <Button
            android:id="@+id/bt_seis"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="6"
            android:layout_marginRight="2pt"
            android:background="@color/fondoAzul"
            android:onClick="numero"
            ></Button>
        <Button
            android:id="@+id/bt_menos"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="-"
            android:layout_marginRight="2pt"
            android:background="@color/colorAccent"
            android:onClick="operacion"
            ></Button>

    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            >
            <Button
                android:id="@+id/bt_uno"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="1"
                android:layout_marginRight="2pt"
                android:background="@color/fondoAzul"
                android:onClick="numero"
                ></Button>
            <Button
                android:id="@+id/bt_dos"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="2"
                android:layout_marginRight="2pt"
                android:background="@color/fondoAzul"
                android:onClick="numero"
                ></Button>
            <Button
                android:id="@+id/bt_tres"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="3"
                android:layout_marginRight="2pt"
                android:background="@color/fondoAzul"
                android:onClick="numero"
                ></Button>
            <Button
                android:id="@+id/bt_mas"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                android:onClick="operacion"
                ></Button>

        </TableRow>


    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_NP"
            android:layout_weight="1"
            android:layout_width="48pt"
            android:layout_height="30pt"
            android:text="+/-"
            android:layout_marginRight="2pt"
            android:background="@color/fondoAzul"
            android:onClick="numero"
            ></Button>
        <Button
            android:id="@+id/bt_cero"
            android:layout_weight="1"
            android:layout_width="48pt"
            android:layout_height="30pt"
            android:text="0"
            android:layout_marginRight="2pt"
            android:background="@color/fondoAzul"
            android:onClick="numero"
            ></Button>
        <Button
            android:id="@+id/bt_punto"
            android:layout_weight="1"
            android:layout_width="48pt"
            android:layout_height="30pt"
            android:text="."
            android:layout_marginRight="2pt"
            android:background="@color/fondoAzul"
            android:onClick="numero"
            ></Button>
        <Button
            android:id="@+id/bt_igual"
            android:layout_weight="1"
            android:layout_width="48pt"
            android:layout_height="30pt"
            android:text="="
            android:layout_marginRight="2pt"
            android:background="@color/colorAccent"
            android:onClick="mostrarResultado"
            ></Button>

    </LinearLayout>
</LinearLayout>